params {
    genome  = "${baseDir}/data/genome.fa" 
    input   = "${baseDir}/assets/samplesheet.csv" 
    outdir  = "results"
}

process {
    executor = 'local'
    cpus = 4
}

profiles {
    singularity {
        singularity.enabled     = true
        singularity.autoMounts  = true
        docker.enabled          = false
        apptainer.enabled       = false
    }

    docker {
        docker.enabled          = true
        docker.userEmulation    = true
        singularity.enabled     = false
        apptainer.enabled       = false
    } 

    apptainer {
        apptainer.enabled       = true
        apptainer.autoMounts    = true
        singularity.enabled     = false
        docker.enabled          = false
    }

    cluster {
        process {
            executor = 'slurm'
            memory = '8 GB' 
            time = '30 min'
            cpus = 16    
 
            withLabel: big {
               cpus = 8
                memory = '16 GB'
            }
        }
    }

    test { 
        process{
            executor = 'local'
            container = ''
        }
    }
}

plugins {
    id 'nf-validation@1.1.3'
    }

manifest {
    name            = 'kylacochrane/nf-journey'
    author          = """Kyla Cochrane"""
    homePage        = 'https://github.com/kylacochrane/nf-journey'
    description     = """STAR RNA-seq mapping pipeline"""
    mainScript      = 'main.nf'
    nextflowVersion = '!>=23.10.1'
    version         = '1.0.0.dev'
    doi             = ''
    defaultBranch   = 'main'
}



